---
import V2Layout from "@/layouts/PanelViewLayout.astro";
import { ItemName } from "@/components/utilitified_decorations/WorkNavbar.astro";

import ProfileInfo from "@/components/profile/ProfileInfoPanel";
import BackButton from "@/components/utilitified_decorations/BackButton";
import RecentActivity from "@/components/profile/RecentActivityPanel";
import Discovery from "@/components/profile/DiscoveryPanel";
import FinanceInfo from "@/components/profile/FinanceInfoPanel";
import ProfileMetric from "@/components/profile/ProfileMetricPanel";
import { ActiveLoginNavItem } from "@/components/utilitified_decorations/LoginNavItem";
---

<V2Layout
  active={ActiveLoginNavItem}
  hideLinks={[ItemName.ProjectName]}
  subtitle="Data Section: Profile"
>
  <BackButton href="/maintainer/work" slot="left" />
  <ProfileInfo slot="center" client:load />
  <FinanceInfo />
  <ProfileMetric slot="center" client:load />

  <RecentActivity slot="right" />
  <!-- <Discovery slot="right" client:load /> -->
</V2Layout>
