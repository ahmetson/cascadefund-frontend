---
import PageLikePanel from "@/components/panel/PageLikePanel";
import type { ActionProps } from "@/types/eventTypes";
import { IconType } from "./icon";

interface Props {
  title: string;
  actions?: ActionProps[] | undefined;
  icon?: IconType;
}

const { title, actions, icon } = Astro.props;
if (actions !== undefined) {
  actions.forEach((el, i) => {
    el.variant = "gray";
    actions[i] = el;
  });
}
---

<PageLikePanel
  icon={icon}
  title={title}
  className="bg-cyan-50 border-cyan-100"
  actions={actions}
>
  <slot />
</PageLikePanel>
