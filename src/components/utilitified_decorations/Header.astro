---
import CascadeFundLogo from "./Logo.astro";
import AuthNavItem from "./AuthNavItem";
import WorkNavbar, { type ItemName } from "./WorkNavbar.astro";

interface Props {
  active?: string;
  hideLinks?: string[];
  subtitle?: any; // header left
}

const { subtitle, active, hideLinks } = Astro.props;
---

<header
  class={`shadow-sm border-b border-gray-200 fixed top-0 right-0 left-0 z-900`}
>
  <div class="navbar bg-base-100 shadow-sm items-start min-h-6">
    <div class="navbar-start h-6">
      <div class="dropdown">
        <div tabindex={0} role="button" class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path>
          </svg>
        </div>
        <WorkNavbar
          tabIndex="-1"
          className="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow"
          active={active ? (active as ItemName) : undefined}
          hideLinks={hideLinks ? (hideLinks as ItemName[]) : undefined}
          vertical={true}
          ><slot />
        </WorkNavbar>
      </div>
      <CascadeFundLogo />
    </div>
    <div class="navbar-center h-6 hidden lg:flex lg:min-w-[50vw]">
      <WorkNavbar
        className="space-x-6"
        active={active ? (active as ItemName) : undefined}
        hideLinks={hideLinks ? (hideLinks as ItemName[]) : undefined}
        ><slot />
      </WorkNavbar>
    </div>
    <div class="navbar-end flex h-6">
      <AuthNavItem className="py-2! px-2!" client:load />
    </div>
  </div>
</header>

<style is:global>
  .vertical-navbar ul {
    display: "flex";
  }
</style>
