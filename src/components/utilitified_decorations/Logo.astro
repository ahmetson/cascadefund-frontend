---
import Link from "@/components/Link";

interface Props {
  className?: string;
  imgClassName?: string;
  titleClassName?: string;
}

const { className, imgClassName, titleClassName } = Astro.props;
---

<Link
  id="logo"
  href="/"
  className={" flex flex-start h-14 items-center " + (className || "")}
>
  <div
    class={`w-8 h-8 bg-transparent rounded flex items-center justify-center ${imgClassName}`}
  >
    <img
      src="/cascadefund_logo.png"
      id="logoImg"
      alt="CascadeFund Logo"
      class="w-full h-full"
    />
    <img
      src="/cascadefund_logo_hover.png"
      id="hoveredLogoImg"
      alt="CascadeFund Logo"
      class="w-full h-full"
    />
  </div>
  <div class="flex-col hidden md:flex">
    <h1 class={`text-xl mt-0 ${titleClassName}`}>CascadeFund</h1>
    <div
      class="flex flex-start text-sm text-gray-500 w-full -mt-1"
      id="logoSubtitle"
    >
      <div class="hidden lg:flex"><slot /></div>
    </div>
  </div>
</Link>
<style>
  :global(.hyperlink) #logoImg {
    display: block;
  }
  :global(.hyperlink) #hoveredLogoImg {
    display: none;
  }
  :global(.hyperlink) #logoSubtitle {
    display: block;
    transition: font-size 0.1s ease-out;
  }

  :global(.hyperlink):hover #logoSubtitle {
    opacity: 0.4;
    font-size: 0.65rem;
  }

  :global(.hyperlink):hover #logoImg {
    display: none;
  }

  :global(.hyperlink):hover #hoveredLogoImg {
    display: block;
  }
</style>
