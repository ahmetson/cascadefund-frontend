---
import WorkNavbar, { type ItemName as WorkItemName } from "./WorkNavbar.astro";
import LandingNavbar, {
  type ItemName as LandingItemName,
} from "./LandingNavbar.astro";

interface Props {
  active?: string;
  hideLinks?: string[];
  landingPageMenu?: boolean;
  additional?: React.ReactNode[];
}

const { additional, landingPageMenu = true, active, hideLinks } = Astro.props;
---

{
  landingPageMenu ? (
    <LandingNavbar
      additional={additional}
      active={active ? (active as LandingItemName) : undefined}
      hideLinks={hideLinks ? (hideLinks as LandingItemName[]) : undefined}
    />
  ) : (
    <WorkNavbar
      additional={additional}
      active={active ? (active as WorkItemName) : undefined}
      hideLinks={hideLinks ? (hideLinks as WorkItemName[]) : undefined}
    />
  )
}
