---
import StruggleCard, { type InfoPanelProps } from '@/components/v2/InfoPanel'

interface Props {
  prefix: string
  title: string
  img: {
    src: string
    alt?: string
  }
  panels: InfoPanelProps[]
}

const {title, img, panels, prefix} = Astro.props
---

    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            {title}
          </h3>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div class="order-2 md:order-1">
            <img 
              src={img.src}
              alt={img.alt}
              class="w-full h-auto rounded-lg"
              referrerpolicy="no-referrer"
            />
          </div>
          
          <div class="order-1 md:order-2 space-y-6">
            {panels.map((struggle, index) => (
              <StruggleCard
                key={prefix+index}
                icon={struggle.icon}
                title={struggle.title}
                description={struggle.description}
                iconBgColor={struggle.iconBgColor}
              />
            ))}
          </div>
        </div>
      </div>
    </section>
