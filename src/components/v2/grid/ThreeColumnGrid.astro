---
interface Props {
  centerPercents?: '1/3' | 50 | '3/4' | '4/5'
  centerClassName?: string
  leftClassName?: string
  rightClassName?: string
}

let {centerPercents, centerClassName, leftClassName, rightClassName} = Astro.props;
if (centerPercents === undefined) {
  centerPercents = 50
}

const cols = 
  centerPercents === '1/3' ? 3 : // center: 1/3 = Cols: 6 L:2, C:2, R:2
  centerPercents === 50 ? 4 :   // center: 50% = Cols: 4, L:1, C:2, R:1
  centerPercents === '3/4' ? 8 : // center: 3/4 = Cols: 8, L:1, C:6, R:1
  10 // center: 4/5 = Cols: 10, L:1, C:8, R:1
const centerSpan = 
  centerPercents === '1/3' ? 1 :
  centerPercents === 50 ? 2 :  
  centerPercents === '3/4' ? 6 : 
  8
---

<main class={`max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-${cols}`}>
  <div class={`lg:col-span-1 space-y-4 py-8 pt-0 mr-2 ${leftClassName || ''}`}>
    <slot name="left" />
  </div>
      
  <div class={`lg:col-span-${centerSpan} space-y-4 py-8 pt-0 mx-2 ${centerClassName || ''}`}>
    <slot name="center"/>
  </div>
  <div class={`lg:col-span-1 space-y-4 py-8 pt-0 ml-2 ${rightClassName || ''}`}>
    <slot name="right" />
  </div>
</main>
