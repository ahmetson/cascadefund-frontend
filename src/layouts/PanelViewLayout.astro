---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import Header from "@/components/utilitified_decorations/Header.astro";
import Footer from "@/components/utilitified_decorations/Footer.astro";
import ThreeColumnGrid from "@/components/grid/ThreeColumnGrid.astro";

interface Props {
  subtitle?: string;
  active?: string;
  hideLinks?: string[];
}
const { subtitle, hideLinks } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/cascadefund_logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>CascadeFund</title>
    <style is:global>
      @import "@chatscope/chat-ui-kit-styles/dist/default/styles.min.css";
    </style>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gray-200 pt-14">
    <Header subtitle={subtitle} hideLinks={hideLinks}>
      <slot name="header-navbar" />
    </Header>
    <section>
      <slot name="hero" />
    </section>
    <ThreeColumnGrid className="mx-auto py-8 px-4">
      <slot name="left" slot="left" />
      <slot name="center" slot="center" />
      <slot name="right" slot="right" />
    </ThreeColumnGrid>
    <Footer />
  </body>
</html>
