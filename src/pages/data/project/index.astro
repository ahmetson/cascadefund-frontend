---
import V2Layout from "@/layouts/PanelViewLayout.astro";
import { MenuName } from "@/components/utilitified_decorations/WorkNavbar.astro";

import NotificationBanner from "@/components/NotificationBanner";
import ProjectInfo from "@/components/project/ProjectLink";
import ProjectStats from "@/components/project/ProjectStatsPanel";
import IssuesSection from "@/components/issue/IssueListPanel";
import CallToInteract from "@/components/project/CallToInteractPanel";
import ProjectPeople from "@/components/project/ProjectPeoplePanel";
import HighlightedInteraction from "@/components/project/HighlightedInteractionPanel";
import MenuPanel from "@/components/menu/MenuPanel";
import IssueInfoPanel from "@/components/project/IssueStatPanel";
---

<V2Layout active={MenuName.ProjectName} subtitle="Data Section: Project">
  <MenuPanel slot="left" activeMenuItem="project" />
  <NotificationBanner
    type="success"
    title="Quest System Updated!"
    slot="center"
    icon="success"
  >
    <span class="text-sm text-gray-700"
      >A quick task was added on CascadeFund page. You are automatically
      following the issue.</span
    >
  </NotificationBanner>
  <NotificationBanner
    type="success"
    title="Quest System Updated!"
    slot="center"
    icon="success"
  >
    <span class="text-sm text-gray-700"
      >You are now following the project. Whenever it appears on the
      CascadeFund, you will be notified.</span
    >
  </NotificationBanner>

  <ProjectInfo
    title="Sample Project"
    isInfluencer={false}
    filterable
    rating={5}
    forks={27}
    license="MIT"
    tagLine="A sample project tagline."
    fundTag="CascadeFund"
    fundId="CF123"
    description="This is a sample description for the project panel."
    color="blue"
    slot="center"
  />
  <ProjectStats slot="center" />
  <IssuesSection title="All Issues" filterable={true} slot="center" />

  <ProjectPeople slot="right" />
  <HighlightedInteraction slot="right" />
  <CallToInteract slot="right" />
  <IssueInfoPanel slot="right" />
</V2Layout>
