---
import V2Layout from "@/layouts/PanelViewLayout.astro";
import { NavigationName } from "@/components/utilitified_decorations/HeaderRight";

import ProfileInfo from '@/components/v2/profile/ProfileInfoPanel'
import BackButton from "@/components/utilitified_decorations/BackButton";
import RecentActivity from "@/components/v2/profile/RecentActivityPanel";
import Discovery from "@/components/v2/profile/DiscoveryPanel";
import FinanceInfo from "@/components/v2/profile/FinanceInfoPanel";
import ProfileMetric from "@/components/v2/profile/ProfileMetricPanel";

---
<V2Layout landingPageTopMenu={false} activeLink={NavigationName.Avatar} hideLinks={[NavigationName.ProjectName]} cascadeLogoSubtitle="Data Section: Profile" >
  <BackButton href="/v2/maintainer/work" slot="left" />    
  <ProfileInfo slot="center" client:visible />
  <FinanceInfo />
  <ProfileMetric slot="center" client:visible />

  <RecentActivity slot="right" />
  <Discovery slot="right" client:visible />
</V2Layout>