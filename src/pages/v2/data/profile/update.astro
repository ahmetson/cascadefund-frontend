---
import "../../../../styles/v2/7.1.1_profile.css";
import V2Layout from "../../../../layouts/V2Layout.astro";
import Header from '../../../../components/utilitified_decorations/Header'
import Footer from '../../../../components/utilitified_decorations/Footer'
import { NavigationName } from "../../../../components/utilitified_decorations/HeaderRight";

import ProfileCard from '../../../../components/v2/7.1.2_update_profile/ProfileCard'
import RecentActivity from '../../../../components/v2/7.1.2_update_profile/RecentActivity'
import FinancialStatus from '../../../../components/v2/7.1.2_update_profile/FinancialStatus'
import ProjectTimeAllocation from '../../../../components/v2/7.1.2_update_profile/ProjectTimeAllocation'
import WorkStyle from '../../../../components/v2/7.1.2_update_profile/WorkStyle'
import TopSupporters from '../../../../components/v2/7.1.2_update_profile/TopSupporters'

---
<V2Layout>
 <div class="min-h-screen bg-gray-50">
      <Header landingPageTopMenu={false} activeLink={NavigationName.Avatar} hideLinks={[NavigationName.ProjectName]} cascadeLogoSubtitle="Data Update Section: Profile" />
      <main class="max-w-7xl mx-auto px-4 py-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <div class="lg:col-span-2 space-y-6">
            <ProfileCard />
            <FinancialStatus />
            <WorkStyle />
          </div>
          <div class="lg:col-span-1">
            <RecentActivity />
            <ProjectTimeAllocation />
            <TopSupporters />
          </div>
        </div>
      </main>
      <Footer />
    </div>
</V2Layout>