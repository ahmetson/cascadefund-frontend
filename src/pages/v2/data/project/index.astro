---
import V2Layout from "@/layouts/PanelViewLayout.astro";
import { NavigationName } from "@/components/utilitified_decorations/HeaderRight";

import NotificationBanner from '@/components/v2/NotificationBanner'
import ProjectInfo from '@/components/v2/project/ProjectInfoPanel'
import ProjectStats from '@/components/v2/project/ProjectStatsPanel'
import IssuesSection from '@/components/v2/project/IssueListPanel'
import CallToInteract from '@/components/v2/project/CallToInteractPanel'
import ProjectPeople from '@/components/v2/project/ProjectPeoplePanel'
import HighlightedInteraction from '@/components/v2/project/HighlightedInteractionPanel'

---
<V2Layout landingPageTopMenu={false} activeLink={NavigationName.ProjectName} hideLinks={[NavigationName.ProjectName]} cascadeLogoSubtitle="Data Section: Project" >
        <NotificationBanner type="success" title="Quest System Updated!" slot="center">
          <span class="text-sm text-gray-700">A quick task was added on CascadeFund page. You are automatically following the issue.</span>
        </NotificationBanner>
        <NotificationBanner type="success" title="Quest System Updated!" slot="center">
            <span class="text-sm text-gray-700">You are now following the project. Whenever it appears on the CascadeFund, you will be notified.</span>
        </NotificationBanner>
        
        <ProjectInfo slot="center" />
        <ProjectStats slot="center" />
        <IssuesSection slot="center" />
        
        <ProjectPeople slot="right" />
        <HighlightedInteraction slot="right" />
        <CallToInteract slot="right" />
</V2Layout>