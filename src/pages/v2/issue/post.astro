---
import "../../../styles/v2/4.1_post_issue.css";
import V2Layout from "@/layouts/PanelViewLayout.astro";
import NavigatingSubtitledElement from '@/components/utilitified_decorations/NavigatingSubtitledElement'
import NavigatingElement from '@/components/utilitified_decorations/NavigatingElement'
import BackButton from "@/components/utilitified_decorations/BackButton";

import IssueCard from '@/components/v2/issue/UpdatableIssueContentPanel'
import VotingSection from '@/components/v2/issue/IssuePrioritificationPanel'
import ChatPanel from '@/components/chat/ExampleContainer'
import IssueDetails from '@/components/v2/issue/UpdatableIssueDetailsPanel'

import NotificationBanner from '@/components/v2/NotificationBanner'

const additional = [
  await NavigatingElement({href: "/v2/maintainer/work", children: "Cascading Work"}),
  await NavigatingSubtitledElement({subtitle: "Issues List/Roadmap", active: true, children: "Version"}),
  await NavigatingElement({active: true, children: "Adding Issue"})
].reverse();
---

<V2Layout additional={additional}>
  <BackButton slot="left" href="/v2/issue"></BackButton>
  <NotificationBanner
    slot="center"
    type="warning"
    title="Adding a new issue"
  >You are adding new</NotificationBanner>

  <IssueCard slot="center" panelTitle="Add a new Issue" actions={[{
    variant: "blue",
    label: "Next",
    href: '/v2/issue'
  }]} />
  <VotingSection slot="center" />
  <IssueDetails slot="right" />
  <ChatPanel slot="right" client:visible />
</V2Layout>

<style is:global>
  @import '@chatscope/chat-ui-kit-styles/dist/default/styles.min.css';
</style>