---
import "../../../styles/v2/2.1_login.css";
import V2Layout from "../../../layouts/V2Layout.astro";
import Header from '../../../components/utilitified_decorations/Header'
import Footer from '../../../components/utilitified_decorations/Footer'
import { LandingRightMenu } from "../../../components/utilitified_decorations/HeaderRight";

import WelcomeSection from '../../../components/v2/2.1_login/WelcomeSection'
