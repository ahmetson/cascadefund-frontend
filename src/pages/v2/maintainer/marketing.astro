---
import "../../../styles/v2/6.3_work.css";
import V2Layout from "../../../layouts/V2Layout.astro";

import Header from '../../../components/v2/6.4.3_cmaintainer/Header'
import MainContent from '../../../components/v2/6.5_marketing/MainContent'
import ShareTools from '../../../components/v2/6.5_marketing/ShareTools'
import Footer from '../../../components/v2/6.5_marketing/Footer'
import SideBar from '../../../components/v2/6.3_work/Sidebar'

---

<V2Layout>
<div class="min-h-screen bg-gray-50 flex flex-col">
      <Header activeRight={2} />
      <div class="flex-1 max-w-6xl mx-auto px-4 py-8 w-full">
        <!-- Upper menu with todo -->
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
          <div class="lg:col-span-1">
            <SideBar activeMenuItem="marketing" />
          </div>
          <div class="lg:col-span-2">
            <MainContent />
          </div>
          <div class="lg:col-span-1">
            <ShareTools />
          </div>
        </div>
      </div>
      <Footer />
    </div>
</V2Layout>